@namespace JournalApp.Components.Pages.Journal
@page "/export"

<style>
    /* Use global variables from app.css */
    
    .export-page {
        max-width: 780px;
        margin: 0 auto; /* Center horizontal */
        display: flex;
        flex-direction: column;
        gap: 14px;
        padding: 18px;
        /* Removed local background/border to behave like other pages */
        width: 100%;
        color: var(--text);
    }

    /* Header */
    .export-head {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        width: fit-content;
        text-decoration: none;
        font-weight: 850;
        color: var(--text);
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--surface);
        box-shadow: 0 10px 22px rgba(2,6,23,.06);
        transition: transform .18s ease, box-shadow .18s ease;
    }

        .back-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 44px rgba(2,6,23,.10);
        }

    .head-row {
        display: flex;
        align-items: center;
        gap: 14px;
        flex-wrap: wrap;
    }

    .title-badge {
        width: 52px;
        height: 52px;
        border-radius: 18px;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        box-shadow: 0 16px 40px rgba(37,99,235,.22);
        display: grid;
        place-items: center;
        color: white;
        font-size: 20px;
        flex: 0 0 auto;
    }

    .export-title {
        margin: 0;
        font-size: 1.55rem;
        font-weight: 950;
        letter-spacing: .2px;
        color: var(--text);
    }

    .export-subtitle {
        margin: 4px 0 0 0;
        color: var(--muted);
        font-weight: 650;
        font-size: .92rem;
    }

    /* Card */
    .card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 22px; /* var(--r-xl) */
        padding: 16px;
        box-shadow: 0 18px 50px rgba(2,6,23,.08);
        backdrop-filter: blur(10px);
    }

    .export-card {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    /* Form layout */
    .form-row {
        display: flex;
        gap: 14px;
        flex-wrap: wrap;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
        min-width: 220px;
        flex: 1;
    }

        .field.full {
            width: 100%;
            flex: 1 1 100%;
        }

    .label {
        font-size: 12px;
        color: var(--muted);
        font-weight: 900;
        letter-spacing: .02em;
    }

    .hint {
        font-size: 12px;
        color: var(--muted);
        font-weight: 650;
    }

    /* Inputs */
    .ui-input {
        width: 100%;
        border: 1px solid var(--border);
        background: var(--card); /* Global var */
        border-radius: 14px;
        padding: 10px 12px;
        min-height: 42px;
        outline: none;
        font-weight: 750;
        color: var(--text);
        transition: box-shadow .18s ease, border-color .18s ease, transform .18s ease;
    }

        .ui-input:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(37,99,235,.12);
            transform: translateY(-1px);
        }

    /* Button */
    .ui-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        border: 1px solid var(--border);
        background: var(--surface);
        border-radius: 14px;
        padding: 11px 16px;
        cursor: pointer;
        min-height: 44px;
        font-weight: 900;
        color: var(--text);
        box-shadow: 0 10px 22px rgba(2,6,23,.06);
        transition: transform .18s ease, box-shadow .18s ease;
        white-space: nowrap;
    }

        .ui-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 44px rgba(2,6,23,.10);
        }

        .ui-btn.primary {
            border: none;
            color: white;
            background: linear-gradient(135deg, var(--accent), var(--accent2));
            box-shadow: 0 18px 44px rgba(37,99,235,.22);
        }

    .btn-ico {
        width: 34px;
        height: 34px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        background: rgba(255,255,255,.18);
        border: 1px solid rgba(255,255,255,.18);
    }

    .actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 6px;
    }

    /* Messages */
    .message {
        margin-top: 8px;
        padding: 12px 14px;
        border-radius: 16px;
        font-size: 14px;
        font-weight: 750;
        border: 1px solid var(--border);
        background: var(--surface);
        box-shadow: 0 12px 34px rgba(2,6,23,.06);
    }

        .message.info {
            color: var(--text);
        }

        .message.success {
            border-color: rgba(22,163,74,.22);
            background: rgba(22,163,74,.10);
            color: #16a34a; /* var(--good) */
            font-weight: 900;
        }

    .path {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 13px;
        opacity: .95;
        margin-top: 6px;
    }

    /* Small helper chip */
    .chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--surface);
        font-size: 13px;
        font-weight: 850;
        box-shadow: 0 10px 22px rgba(2,6,23,.06);
        width: fit-content;
        color: var(--text);
    }
</style>

<div class="export-page">
    <div class="export-head">
        <a class="back-link" href="/entries">⬅️ Back to Entries</a>

        <div class="head-row">
            <div class="title-badge">📤</div>
            <div>
                <h2 class="export-title">Export Journals</h2>
                <p class="export-subtitle">Download your journal entries as a PDF file.</p>
            </div>
        </div>

        <div class="chip">🧾 Tip: Choose a date range for a smaller PDF</div>
    </div>

    <div class="card export-card">
        <!-- Date range -->
        <div class="form-row">
            <div class="field">
                <label class="label">📅 From</label>
                <input class="ui-input" type="date" @bind="FromDate" />
            </div>

            <div class="field">
                <label class="label">📅 To</label>
                <input class="ui-input" type="date" @bind="ToDate" />
            </div>
        </div>

        <!-- File name -->
        <div class="field full">
            <label class="label">📝 File name</label>
            <input class="ui-input" placeholder="e.g., MyJournal_2026" @bind="FileName" />
            <div class="hint">PDF will be saved using this name.</div>
        </div>

        <!-- Action -->
        <div class="actions">
            <button class="ui-btn primary" @onclick="ExportAsync" type="button">
                <span class="btn-ico">⬇️</span>
                Export PDF
            </button>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrWhiteSpace(Message))
        {
            <div class="message info">ℹ️ @Message</div>
        }

        @if (!string.IsNullOrWhiteSpace(ExportedPath))
        {
            <div class="message success">
                ✅ Export completed!
                <div class="path"><b>Saved at:</b> @ExportedPath</div>
            </div>
        }
    </div>
</div>
