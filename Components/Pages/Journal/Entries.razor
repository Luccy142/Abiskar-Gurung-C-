@namespace JournalApp.Components.Pages.Journal
@page "/entries"

<style>
    :root {
        --r-xl: 22px;
        --r-lg: 18px;
        --r-md: 14px;
    }

    .entries {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 14px;
        padding: 18px;
        background: radial-gradient(900px 500px at 12% 8%, rgba(37,99,235,.14), transparent), radial-gradient(900px 500px at 88% 18%, rgba(6,182,212,.12), transparent), radial-gradient(900px 500px at 50% 95%, rgba(99,102,241,.10), transparent), var(--bg);
        border-radius: var(--r-xl);
        border: 1px solid var(--border);
        box-shadow: 0 18px 50px rgba(2,6,23,.06);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        color: var(--text);
    }

    /* Header */
    .entries-head {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        gap: 14px;
        flex-wrap: wrap;
        padding: 6px 2px 2px;
    }

    .title-row {
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .title-badge {
        width: 52px;
        height: 52px;
        border-radius: 18px;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        box-shadow: 0 16px 40px rgba(37,99,235,.22);
        display: grid;
        place-items: center;
        color: white;
        font-size: 20px;
        flex: 0 0 auto;
    }

    .entries-title {
        margin: 0;
        font-size: 1.55rem;
        font-weight: 950;
        letter-spacing: .2px;
    }

    .entries-subtitle {
        margin: 4px 0 0;
        color: var(--muted);
        font-weight: 650;
        font-size: .92rem;
    }

    .page-chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--surface);
        font-size: 13px;
        font-weight: 800;
        white-space: nowrap;
        box-shadow: 0 10px 22px rgba(2,6,23,.06);
    }

    /* Card */
    .card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--r-xl);
        padding: 16px;
        box-shadow: 0 18px 50px rgba(2,6,23,.08);
        backdrop-filter: blur(10px);
    }

    /* Filters */
    .filters-bar {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .filters-row {
        display: flex;
        gap: 12px;
        align-items: flex-end;
        flex-wrap: wrap;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
        min-width: 180px;
    }

        .field.grow {
            flex: 1;
            min-width: 280px;
        }

    .label {
        font-size: 12px;
        color: var(--muted);
        font-weight: 900;
        letter-spacing: .02em;
    }

    .hint {
        font-size: 12px;
        color: var(--muted);
        opacity: .9;
        margin-top: 2px;
    }

    .ui-input {
        width: 100%;
        border: 1px solid var(--border);
        background: var(--surface);
        border-radius: 14px;
        padding: 10px 12px;
        outline: none;
        min-height: 42px;
        font-weight: 700;
        color: var(--text);
        transition: box-shadow .18s ease, border-color .18s ease, transform .18s ease;
    }

        .ui-input:focus {
            border-color: rgba(37,99,235,.40);
            box-shadow: 0 0 0 4px rgba(37,99,235,.12);
            transform: translateY(-1px);
        }

    .ui-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        border: 1px solid var(--border);
        background: var(--surface);
        border-radius: 14px;
        padding: 10px 14px;
        cursor: pointer;
        min-height: 42px;
        font-weight: 850;
        color: var(--text);
        box-shadow: 0 10px 22px rgba(2,6,23,.06);
        transition: transform .18s ease, box-shadow .18s ease, background .18s ease;
        white-space: nowrap;
    }

        .ui-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 44px rgba(2,6,23,.10);
            background: var(--surface);
        }

        .ui-btn:disabled {
            opacity: 0.45;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .ui-btn.primary {
            border: none;
            color: white;
            background: linear-gradient(135deg, var(--accent), var(--accent2));
            box-shadow: 0 18px 44px rgba(37,99,235,.22);
        }

    .btn-ico {
        width: 34px;
        height: 34px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        background: rgba(37,99,235,.10);
        border: 1px solid rgba(37,99,235,.16);
    }

    .ui-btn.primary .btn-ico {
        background: rgba(255,255,255,.18);
        border-color: rgba(255,255,255,.18);
    }

    /* Results header */
    .table-head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 12px;
    }

    .table-title {
        font-weight: 950;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .table-meta {
        font-size: 13px;
        color: var(--muted);
        font-weight: 750;
    }

    /* Table */
    .table-wrap {
        overflow: auto;
        border-radius: 16px;
        border: 1px solid var(--border);
        background: var(--surface);
    }

    .ui-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 860px;
    }

        .ui-table th,
        .ui-table td {
            padding: 12px 12px;
            border-bottom: 1px solid rgba(0,0,0,.06);
            text-align: left;
            vertical-align: middle;
            font-weight: 750;
        }

        .ui-table th {
            font-size: 12px;
            color: var(--muted);
            text-transform: uppercase;
            letter-spacing: .08em;
            font-weight: 950;
            background: rgba(37,99,235,.06);
        }

    .row:hover {
        background: rgba(6,182,212,.06);
    }

    .mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        opacity: 0.95;
        white-space: nowrap;
    }

    .title-cell {
        font-weight: 950;
        max-width: 360px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .tags-cell {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        max-width: 460px;
    }

    .tag-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        background: rgba(37,99,235,.10);
        border: 1px solid rgba(37,99,235,.16);
        font-size: 12px;
        font-weight: 900;
        white-space: nowrap;
    }

    .mood-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        background: rgba(6,182,212,.10);
        border: 1px solid rgba(6,182,212,.18);
        font-size: 12px;
        font-weight: 950;
        white-space: nowrap;
    }

    /* Empty state */
    .empty {
        display: flex;
        gap: 12px;
        align-items: center;
        padding: 16px;
        border-radius: var(--r-xl);
        border: 1px dashed rgba(0,0,0,.14);
        background: var(--surface);
    }

    .empty-icon {
        width: 46px;
        height: 46px;
        border-radius: 18px;
        display: grid;
        place-items: center;
        background: rgba(37,99,235,.10);
        border: 1px solid rgba(37,99,235,.16);
        font-size: 20px;
    }

    .empty-title {
        font-weight: 950;
    }

    .empty-sub {
        color: var(--muted);
        font-weight: 650;
        margin-top: 2px;
    }

    /* Pager */
    .pager {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-top: 14px;
    }

    .pager-mid {
        display: flex;
        justify-content: center;
        flex: 1;
    }

    .page-chip-mini {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--surface);
        font-size: 13px;
        font-weight: 850;
        white-space: nowrap;
    }
</style>

<div class="entries">

    <div class="entries-head">
        <div class="title-row">
            <div class="title-badge">📚</div>
            <div>
                <h2 class="entries-title">Journal Entries</h2>
                <p class="entries-subtitle">Search, filter, and browse your saved entries.</p>
            </div>
        </div>

        <div class="page-chip">
            <span>📄</span>
            Page <b>@CurrentPage</b> / <b>@TotalPages</b>
        </div>
    </div>

    <!-- Filters -->
    <div class="card">
        <div class="filters-bar">

            <!-- Row 1 -->
            <div class="filters-row">
                <div class="field grow">
                    <label class="label">🔎 Search</label>
                    <input class="ui-input"
                           placeholder="Search by title or content..."
                           value="@SearchText"
                           @oninput="OnSearchChanged" />
                    <div class="hint">Tip: type a keyword to filter instantly.</div>
                </div>

                <div class="field">
                    <label class="label">📅 From</label>
                    <input class="ui-input" type="date" @bind="FromDate" @bind:after="ApplyFilters" />
                </div>

                <div class="field">
                    <label class="label">📅 To</label>
                    <input class="ui-input" type="date" @bind="ToDate" @bind:after="ApplyFilters" />
                </div>

                <div class="field">
                    <label class="label">&nbsp;</label>
                    <button class="ui-btn" type="button"
                            @onclick="@(() => { FromDate = null; ToDate = null; ApplyFilters(); })">
                        <span class="btn-ico">🧹</span>
                        Clear dates
                    </button>
                </div>
            </div>

            <!-- Row 2 -->
            <div class="filters-row">
                <div class="field">
                    <label class="label">🙂 Primary Mood</label>
                    <select class="ui-input" @bind="MoodFilter" @bind:after="ApplyFilters">
                        <option value="">All</option>
                        @foreach (var mood in Enum.GetValues(typeof(JournalApp.Models.Enums.MoodType)))
                        {
                            <option value="@mood">@mood</option>
                        }
                    </select>
                </div>

                <div class="field grow">
                    <label class="label">🏷️ Tag contains</label>
                    <input class="ui-input"
                           placeholder="e.g., Work"
                           value="@TagFilter"
                           @oninput="OnTagFilterChanged" />
                </div>
            </div>

        </div>
    </div>

    <!-- Results -->
    @if (AllEntries.Count == 0)
    {
        <div class="card empty">
            <div class="empty-icon">🗒️</div>
            <div>
                <div class="empty-title">No entries found</div>
                <div class="empty-sub">Try clearing filters or searching a different keyword.</div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="table-head">
                <div class="table-title">
                    <span style="width:36px;height:36px;border-radius:14px;display:grid;place-items:center;background:linear-gradient(135deg,var(--accent),var(--accent2));color:white;box-shadow:0 14px 34px rgba(37,99,235,.18);">
                        📌
                    </span>
                    Results
                </div>
                <div class="table-meta">
                    Showing <b>@PageEntries.Count</b> of <b>@AllEntries.Count</b>
                </div>
            </div>

            <div class="results-grid">
                @foreach (var e in PageEntries)
                {
                    <div class="entry-card">
                        <div class="ec-top">
                            <div class="ec-date">@e.EntryDate.ToString("MMM dd, yyyy")</div>
                            <span class="ec-mood">@GetMoodEmoji(e.PrimaryMood)</span>
                        </div>

                        <div class="ec-mid">
                            <div class="ec-title">@e.Title</div>
                            <div class="ec-preview">
                                @(e.Content?.Length > 80 ? e.Content.Substring(0, 80) + "..." : e.Content)
                            </div>
                        </div>

                        <div class="ec-bot">
                            <div class="ec-tags">
                                @if (!string.IsNullOrWhiteSpace(e.Tags))
                                {
                                    @foreach (var t in e.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Take(2))
                                    {
                                        <span class="ec-tag">#@t.Trim()</span>
                                    }
                                }
                            </div>
                            <div class="ec-actions">
                                <a href="/entry/edit/@e.Id" class="ui-btn sm" title="Edit">✏️</a>
                                <button class="ui-btn sm danger" @onclick="() => ConfirmDelete(e)" title="Delete">🗑️</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <style>
                .results-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
                    gap: 16px;
                }

                .entry-card {
                    background: var(--surface);
                    border: 1px solid var(--border);
                    border-radius: 18px;
                    padding: 16px;
                    display: flex;
                    flex-direction: column;
                    gap: 12px;
                    transition: transform .2s ease, box-shadow .2s ease;
                }

                .entry-card:hover {
                    transform: translateY(-4px);
                    box-shadow: 0 14px 40px rgba(0,0,0,.08);
                    border-color: rgba(37,99,235,.3);
                }

                .ec-top {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .ec-date {
                    font-size: 12px;
                    font-weight: 800;
                    opacity: 0.6;
                    text-transform: uppercase;
                    letter-spacing: .05em;
                }

                .ec-mood {
                    font-size: 24px;
                    filter: drop-shadow(0 4px 12px rgba(0,0,0,.1));
                }

                .ec-title {
                    font-size: 18px;
                    font-weight: 850;
                    margin-bottom: 6px;
                    line-height: 1.3;
                    color: var(--text);
                }

                .ec-preview {
                    font-size: 13px;
                    opacity: 0.8;
                    line-height: 1.5;
                    display: -webkit-box;
                    -webkit-line-clamp: 3;
                    -webkit-box-orient: vertical;
                    overflow: hidden;
                }

                .ec-bot {
                    margin-top: auto;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    padding-top: 12px;
                    border-top: 1px solid var(--border);
                }

                .ec-tags {
                    display: flex;
                    gap: 6px;
                }

                .ec-tag {
                    font-size: 11px;
                    padding: 4px 8px;
                    border-radius: 99px;
                    background: rgba(37,99,235,.08);
                    color: var(--accent);
                    font-weight: 800;
                }

                .ui-btn.sm {
                    padding: 6px 12px;
                    font-size: 14px;
                    min-height: 32px;
                }

                .ui-btn.danger {
                    background: rgba(239,68,68,.1);
                    color: #b91c1c;
                    border-color: rgba(239,68,68,.15);
                }
                .ui-btn.danger:hover {
                    background: rgba(239,68,68,.2);
                    transform: translateY(-2px);
                }

                .ec-actions {
                    display: flex;
                    gap: 6px;
                }
            </style>

            <div class="pager">
                <button class="ui-btn" @onclick="PrevPage" disabled="@(CurrentPage <= 1)">
                    <span class="btn-ico">⬅️</span>
                    Prev
                </button>

                <div class="pager-mid">
                    <span class="page-chip-mini">📄 Page <b>@CurrentPage</b> / <b>@TotalPages</b></span>
                </div>

                <button class="ui-btn primary" @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)">
                    <span class="btn-ico">➡️</span>
                    Next
                </button>
            </div>
        </div>
    }
</div>
