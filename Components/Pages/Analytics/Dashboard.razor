@namespace JournalApp.Components.Pages.Analytics
@page "/dashboard"

<style>
    :root {
        --r-xl: 22px;
        --r-lg: 18px;
        --r-md: 14px;
    }

    .dash {
        min-height: 100vh;
        padding: 26px;
        background: radial-gradient(900px 500px at 12% 8%, rgba(37,99,235,.14), transparent), radial-gradient(900px 500px at 88% 18%, rgba(6,182,212,.12), transparent), radial-gradient(900px 500px at 50% 95%, rgba(99,102,241,.10), transparent), var(--bg);
        color: var(--text);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
    }

    .wrap {
        max-width: 1150px;
        margin: 0 auto;
    }

    .dash-head {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        gap: 14px;
        flex-wrap: wrap;
        margin-bottom: 18px;
    }

    .title-row {
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .title-badge {
        width: 54px;
        height: 54px;
        border-radius: 18px;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        box-shadow: 0 16px 40px rgba(37,99,235,.22);
        display: grid;
        place-items: center;
        color: white;
        font-size: 22px;
        flex: 0 0 auto;
    }

    .dash-title {
        margin: 0;
        font-size: 1.55rem;
        font-weight: 900;
        letter-spacing: .2px;
    }

    .dash-subtitle {
        margin: 4px 0 0;
        color: var(--muted);
        font-weight: 600;
        font-size: .92rem;
    }

    .ui-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        border-radius: 14px;
        border: 1px solid var(--border);
        background: var(--surface);
        color: var(--text);
        font-weight: 800;
        cursor: pointer;
        transition: transform .18s ease, box-shadow .18s ease, background .18s ease;
        box-shadow: 0 12px 28px rgba(2,6,23,.08);
    }

        .ui-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 46px rgba(2,6,23,.12);
            background: var(--surface);
        }

        .ui-btn.primary {
            border: none;
            color: white;
            background: linear-gradient(135deg, var(--accent), var(--accent2));
            box-shadow: 0 18px 44px rgba(37,99,235,.22);
        }

        .ui-btn .btn-ico {
            width: 34px;
            height: 34px;
            border-radius: 12px;
            display: grid;
            place-items: center;
            background: rgba(255,255,255,.18);
        }

        .ui-btn:not(.primary) .btn-ico {
            background: rgba(37,99,235,.10);
            border: 1px solid rgba(37,99,235,.18);
        }

    .card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--r-xl);
        box-shadow: 0 18px 50px rgba(2,6,23,.08);
        backdrop-filter: blur(10px);
    }

    .dash-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 14px;
        margin-bottom: 14px;
    }

    .stat {
        padding: 16px;
        position: relative;
        overflow: hidden;
    }

        .stat::before {
            content: "";
            position: absolute;
            inset: -60px -80px auto auto;
            width: 220px;
            height: 220px;
            background: radial-gradient(circle at 30% 30%, rgba(6,182,212,.22), transparent 60%);
            transform: rotate(20deg);
            pointer-events: none;
        }

        .stat:nth-child(2)::before {
            background: radial-gradient(circle at 30% 30%, rgba(37,99,235,.22), transparent 60%);
        }

        .stat:nth-child(3)::before {
            background: radial-gradient(circle at 30% 30%, rgba(245,158,11,.18), transparent 60%);
        }

    .stat-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 8px;
        position: relative;
        z-index: 1;
    }

    .stat-label {
        color: var(--muted);
        font-weight: 800;
        letter-spacing: .02em;
    }

    .stat-value {
        font-size: 2.05rem;
        font-weight: 950;
        line-height: 1;
        margin: 8px 0 2px;
        position: relative;
        z-index: 1;
    }

    .stat-foot {
        color: var(--muted);
        font-weight: 700;
        font-size: .9rem;
        position: relative;
        z-index: 1;
    }

    .chip {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 7px 10px;
        border-radius: 999px;
        font-weight: 900;
        font-size: .78rem;
        border: 1px solid var(--border);
        background: var(--surface);
        position: relative;
        z-index: 1;
        white-space: nowrap;
    }

        .chip.good {
            border-color: rgba(22,163,74,.22);
            background: rgba(22,163,74,.10);
            color: #0b3b1f;
        }

        .chip.warn {
            border-color: rgba(245,158,11,.25);
            background: rgba(245,158,11,.12);
            color: #5a3a00;
        }

        .chip.bad {
            border-color: rgba(239,68,68,.25);
            background: rgba(239,68,68,.10);
            color: #5a0b0b;
        }

    .stat:nth-child(1) {
        grid-column: span 4;
    }

    .stat:nth-child(2) {
        grid-column: span 4;
    }

    .stat:nth-child(3) {
        grid-column: span 4;
    }

    @@media (max-width: 980px) {
        .stat:nth-child(1), .stat:nth-child(2), .stat:nth-child(3) {
            grid-column: span 12;
        }
    }

    .section {
        padding: 16px;
        margin-bottom: 14px;
    }

    .section-head {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 12px;
    }

    .section-title {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 950;
    }

    .section-subtitle {
        margin: 4px 0 0;
        color: var(--muted);
        font-weight: 650;
        font-size: .92rem;
    }

    .filters {
        display: flex;
        align-items: flex-end;
        gap: 10px;
        flex-wrap: wrap;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .label {
        font-size: .78rem;
        color: var(--muted);
        font-weight: 800;
    }

    .ui-input {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: var(--surface);
        font-weight: 700;
        color: var(--text);
        outline: none;
        min-width: 168px;
    }

        .ui-input:focus {
            border-color: rgba(37,99,235,.40);
            box-shadow: 0 0 0 4px rgba(37,99,235,.12);
        }

    .empty {
        display: flex;
        gap: 12px;
        align-items: center;
        padding: 14px;
        border-radius: var(--r-lg);
        border: 1px dashed var(--border);
        background: var(--surface);
    }

    .empty-icon {
        width: 44px;
        height: 44px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        background: rgba(22,163,74,.12);
        border: 1px solid rgba(22,163,74,.18);
        font-size: 20px;
    }

    .empty-title {
        font-weight: 950;
        margin-bottom: 2px;
    }

    .empty-sub {
        color: var(--muted);
        font-weight: 650;
        font-size: .92rem;
    }

    .missed-wrap {
        display: grid;
        gap: 12px;
    }

    .missed-list {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 10px;
    }

    @@media (max-width: 900px) {
        .missed-list {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @@media (max-width: 560px) {
        .missed-list {
            grid-template-columns: 1fr;
        }
    }

    .missed-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        padding: 12px 14px;
        border-radius: var(--r-lg);
        border: 1px solid rgba(239,68,68,.20);
        background: rgba(239,68,68,.06);
        font-weight: 850;
    }

    .missed-date {
        color: var(--text);
        letter-spacing: .2px;
    }

    .dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: var(--bad);
        box-shadow: 0 0 10px rgba(239,68,68,.35);
        margin-right: 10px;
    }

    .insights-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 14px;
    }

    .mini {
        grid-column: span 4;
        padding: 14px;
        border-radius: var(--r-xl);
        border: 1px solid var(--border);
        background: var(--surface);
        box-shadow: 0 14px 40px rgba(2,6,23,.06);
        transition: transform .18s ease, box-shadow .18s ease;
    }

        .mini:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 55px rgba(2,6,23,.10);
        }

    @@media (max-width: 1000px) {
        .mini {
            grid-column: span 12;
        }
    }

    .mini-title {
        font-weight: 950;
        margin-bottom: 10px;
    }

    .mood-row {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 10px;
        margin-bottom: 10px;
    }

    @@media (max-width: 560px) {
        .mood-row {
            grid-template-columns: 1fr;
        }
    }

    .mood-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        border-radius: 16px;
        border: 1px solid var(--border);
        background: var(--surface);
    }

    .mood-emoji {
        width: 40px;
        height: 40px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        background: var(--surface);
        border: 1px solid var(--border);
        font-size: 18px;
    }

    .mood-name {
        font-weight: 950;
        margin-bottom: 2px;
    }

    .mood-count {
        color: var(--muted);
        font-weight: 800;
        font-size: .88rem;
    }

    .mini-foot {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-top: 6px;
        padding-top: 10px;
        border-top: 1px solid rgba(0,0,0,.06);
    }

    .label-soft {
        color: var(--muted);
        font-weight: 800;
        font-size: .85rem;
    }

    .ui-table {
        width: 100%;
        border-collapse: collapse;
        overflow: hidden;
        border-radius: 14px;
        border: 1px solid var(--border);
        background: var(--surface);
    }

        .ui-table th, .ui-table td {
            padding: 10px 12px;
            border-bottom: 1px solid rgba(0,0,0,.06);
            font-weight: 750;
            font-size: .92rem;
        }

        .ui-table th {
            color: var(--muted);
            text-transform: uppercase;
            letter-spacing: .08em;
            font-size: .72rem;
            font-weight: 900;
            background: rgba(37,99,235,.06);
        }

        .ui-table tr:hover td {
            background: rgba(6,182,212,.06);
        }

    .right {
        text-align: right;
    }

    .tag-pill {
        display: inline-flex;
        align-items: center;
        padding: 6px 10px;
        border-radius: 999px;
        background: var(--surface);
        border: 1px solid var(--border);
        font-weight: 900;
    }

    .strip {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        padding: 14px 16px;
        border-radius: var(--r-xl);
        margin-bottom: 14px;
        border: 1px solid rgba(37,99,235,.18);
        background: linear-gradient(135deg, rgba(37,99,235,.10), rgba(6,182,212,.08));
    }
</style>

<div class="dash">
    <div class="wrap">

        <div class="dash-head">
            <div class="title-row">
                <div class="title-badge">📊</div>
                <div>
                    <h2 class="dash-title">Dashboard</h2>
                    <p class="dash-subtitle">Streaks, missed days, and insights from your journal activity.</p>
                </div>
            </div>

            <button class="ui-btn primary" @onclick="LoadAsync" type="button">
                <span class="btn-ico">🔄</span>
                Refresh
            </button>
        </div>

        <div class="strip card">
            <div style="display:flex;align-items:center;gap:12px;font-weight:900;">
                <div style="width:42px;height:42px;border-radius:16px;display:grid;place-items:center;color:white;background:linear-gradient(135deg,var(--accent),var(--accent2));box-shadow:0 14px 34px rgba(37,99,235,.20);">
                    ✨
                </div>
                <div>
                    <div>Quick snapshot</div>
                    <div style="color:var(--muted);font-weight:750;font-size:.92rem;margin-top:2px;">Keep writing daily to improve streak + insights</div>
                </div>
            </div>
            <span class="chip">🗓️ @DateTime.Today.ToString("yyyy-MM-dd")</span>
        </div>

        <div class="dash-grid">
            <div class="card stat">
                <div class="stat-top">
                    <div class="stat-label">🔥 Current streak</div>
                    <span class="chip good">✅ Active</span>
                </div>
                <div class="stat-value">@CurrentStreak</div>
                <div class="stat-foot">day(s) in a row</div>
            </div>

            <div class="card stat">
                <div class="stat-top">
                    <div class="stat-label">🏆 Longest streak</div>
                    <span class="chip">⭐ Best</span>
                </div>
                <div class="stat-value">@LongestStreak</div>
                <div class="stat-foot">day(s) record</div>
            </div>

            <div class="card stat">
                <div class="stat-top">
                    <div class="stat-label">⏳ Missed in range</div>
                    <span class="chip warn">📌 Range</span>
                </div>
                <div class="stat-value">@MissedDays.Count</div>
                <div class="stat-foot">day(s) missed</div>
            </div>
        </div>

        <div class="card section">
            <div class="section-head">
                <div>
                    <h3 class="section-title">🧩 Missed Days</h3>
                    <p class="section-subtitle">Pick a date range to see which days were skipped.</p>
                </div>

                <div class="filters">
                    <div class="field">
                        <label class="label">From</label>
                        <input class="ui-input" type="date" @bind="FromDate" />
                    </div>

                    <div class="field">
                        <label class="label">To</label>
                        <input class="ui-input" type="date" @bind="ToDate" />
                    </div>

                    <button class="ui-btn" @onclick="LoadAsync" type="button">
                        <span class="btn-ico">✅</span>
                        Apply
                    </button>
                </div>
            </div>

            @if (MissedDays.Count == 0)
            {
                <div class="empty">
                    <div class="empty-icon">✅</div>
                    <div>
                        <div class="empty-title">No missed days</div>
                        <div class="empty-sub">You stayed consistent in this selected range.</div>
                    </div>
                </div>
            }
            else
            {
                <div class="missed-wrap">
                    <div>
                        <span class="chip bad">⚠️ Total missed: @MissedDays.Count</span>
                    </div>

                    <div class="missed-list">
                        @foreach (var d in MissedDays)
                        {
                            <div class="missed-item">
                                <span style="display:flex;align-items:center;gap:10px;">
                                    <span class="dot"></span>
                                    <span class="missed-date">@d.ToString("yyyy-MM-dd")</span>
                                </span>
                                <span class="chip">🗓️</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="card section">
            <div class="section-head">
                <div>
                    <h3 class="section-title">📈 Analytics & Insights</h3>
                    <p class="section-subtitle">Mood patterns, popular tags, and writing trend.</p>
                </div>

                <div class="chip">💡 Insights</div>
            </div>

            <div class="insights-grid">
                <div class="mini">
                    <div class="mini-title">😊 Mood Distribution</div>

                    @if (MoodDist.Count > 0)
                    {
                        <div class="mood-row">
                            <div class="mood-item">
                                <div class="mood-emoji">😄</div>
                                <div>
                                    <div class="mood-name">Positive</div>
                                    <div class="mood-count">@MoodDist.GetValueOrDefault("Positive")</div>
                                </div>
                            </div>

                            <div class="mood-item">
                                <div class="mood-emoji">😐</div>
                                <div>
                                    <div class="mood-name">Neutral</div>
                                    <div class="mood-count">@MoodDist.GetValueOrDefault("Neutral")</div>
                                </div>
                            </div>

                            <div class="mood-item">
                                <div class="mood-emoji">😔</div>
                                <div>
                                    <div class="mood-name">Negative</div>
                                    <div class="mood-count">@MoodDist.GetValueOrDefault("Negative")</div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mini-empty">No mood data yet.</div>
                    }

                    <div class="mini-foot">
                        <span class="label-soft">Most frequent mood</span>
                        <span class="chip">🏷️ @((MostFrequentMood ?? "N/A"))</span>
                    </div>
                </div>

                <div class="mini">
                    <div class="mini-title">🏷️ Most Used Tags (Top 10)</div>

                    @if (TopTags.Count > 0)
                    {
                        <table class="ui-table">
                            <thead>
                                <tr>
                                    <th>Tag</th>
                                    <th class="right">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kv in TopTags)
                                {
                                    <tr>
                                        <td><span class="tag-pill">#@kv.Key</span></td>
                                        <td class="right">@kv.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="mini-empty">No tags found yet.</div>
                    }
                </div>

                <div class="mini">
                    <div class="mini-title">✍️ Word Count Trend</div>

                    @if (WordTrend.Count > 0)
                    {
                        <table class="ui-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th class="right">Words</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in WordTrend)
                                {
                                    <tr>
                                        <td>@row.date.ToString("yyyy-MM-dd")</td>
                                        <td class="right">@row.wordCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="mini-empty">No writing trend available yet.</div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
