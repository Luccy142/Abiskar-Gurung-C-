@namespace JournalApp.Components.Pages.Settings
@page "/settings/theme"

<style>
    :root {
        --bg: #f5f8ff;
        --surface: rgba(255,255,255,.92);
        --border: rgba(15,23,42,.10);
        --text: #0f172a;
        --muted: #64748b;
        --accent: #2563eb; /* blue */
        --accent2: #06b6d4; /* cyan */

        --r-xl: 22px;
        --r-lg: 18px;
        --r-md: 14px;
    }

    :root[data-theme="dark"] {
        --bg: #060710;
        --surface: rgba(15, 23, 42, 0.92);
        --border: rgba(255, 255, 255, 0.08);
        --text: rgba(248, 250, 252, 0.96);
        --muted: rgba(148, 163, 184, 0.9);
        --accent: #60a5fa;
        --accent2: #38bdf8;

        --r-xl: 22px;
        --r-lg: 18px;
        --r-md: 14px;
    }

    .theme-page {
        max-width: 780px;
        padding: 18px;
        border-radius: var(--r-xl);
        border: 1px solid rgba(37,99,235,.10);
        background: radial-gradient(900px 500px at 12% 8%, rgba(37,99,235,.14), transparent), radial-gradient(900px 500px at 88% 18%, rgba(6,182,212,.12), transparent), radial-gradient(900px 500px at 50% 95%, rgba(99,102,241,.10), transparent), var(--bg);
        box-shadow: 0 18px 50px rgba(2,6,23,.06);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        color: var(--text);
    }

    .head {
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 12px;
        flex-wrap: wrap;
    }

    .badge {
        width: 52px;
        height: 52px;
        border-radius: 18px;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        box-shadow: 0 16px 40px rgba(37,99,235,.22);
        display: grid;
        place-items: center;
        color: white;
        font-size: 20px;
        flex: 0 0 auto;
    }

    .title {
        margin: 0;
        font-size: 1.55rem;
        font-weight: 950;
        letter-spacing: .2px;
    }

    .sub {
        margin: 4px 0 0;
        color: var(--muted);
        font-weight: 650;
        font-size: .92rem;
    }

    .card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--r-xl);
        padding: 16px;
        box-shadow: 0 18px 50px rgba(2,6,23,.08);
        backdrop-filter: blur(10px);
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
        margin-top: 10px;
    }

    .label {
        font-size: 12px;
        color: var(--muted);
        font-weight: 900;
        letter-spacing: .02em;
    }

    .ui-select {
        width: 100%;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.90);
        border-radius: 14px;
        padding: 10px 12px;
        min-height: 44px;
        outline: none;
        font-weight: 800;
        color: var(--text);
        transition: box-shadow .18s ease, border-color .18s ease, transform .18s ease;
    }

        .ui-select:focus {
            border-color: rgba(37,99,235,.40);
            box-shadow: 0 0 0 4px rgba(37,99,235,.12);
            transform: translateY(-1px);
        }

    .actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 14px;
    }

    .ui-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.85);
        border-radius: 14px;
        padding: 10px 14px;
        cursor: pointer;
        min-height: 44px;
        font-weight: 900;
        color: var(--text);
        box-shadow: 0 10px 22px rgba(2,6,23,.06);
        transition: transform .18s ease, box-shadow .18s ease, background .18s ease;
        white-space: nowrap;
    }

        .ui-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 44px rgba(2,6,23,.10);
            background: rgba(255,255,255,.95);
        }

        .ui-btn.primary {
            border: none;
            color: white;
            background: linear-gradient(135deg, var(--accent), var(--accent2));
            box-shadow: 0 18px 44px rgba(37,99,235,.22);
        }

    .btn-ico {
        width: 34px;
        height: 34px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        background: rgba(255,255,255,.18);
        border: 1px solid rgba(255,255,255,.18);
    }

    .message {
        margin-top: 12px;
        padding: 12px 14px;
        border-radius: 16px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.75);
        box-shadow: 0 12px 34px rgba(2,6,23,.06);
        font-weight: 750;
        color: var(--text);
    }

    .hint {
        margin-top: 8px;
        color: var(--muted);
        font-weight: 650;
        font-size: .92rem;
    }

    .chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.75);
        font-size: 13px;
        font-weight: 850;
        box-shadow: 0 10px 22px rgba(2,6,23,.06);
        width: fit-content;
        white-space: nowrap;
        margin-top: 10px;
    }
</style>

<div class="theme-page">
    <div class="head">
        <div class="badge">🎨</div>
        <div>
            <h3 class="title">Theme Settings</h3>
            <div class="sub">Switch between Light and Dark appearance for the app.</div>
        </div>
    </div>

    <div class="card">
        <div class="chip">✨ Current choice affects the whole UI</div>

        <div class="field">
            <label class="label">Select Theme</label>
            <select class="ui-select" @bind="SelectedTheme">
                <option value="light">🌤️ Light</option>
                <option value="dark">🌙 Dark</option>
            </select>
            <div class="hint">Tip: choose Dark at night for comfort.</div>
        </div>

        <div class="actions">
            <button class="ui-btn primary" @onclick="SaveTheme" type="button">
                <span class="btn-ico">💾</span>
                Save
            </button>
        </div>

        @if (!string.IsNullOrWhiteSpace(Message))
        {
            <div class="message">ℹ️ @Message</div>
        }
    </div>
</div>
