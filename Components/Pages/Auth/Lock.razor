@namespace JournalApp.Components.Pages.Auth
@page "/lock"
@inject JournalApp.Services.Interfaces.IAuthService AuthService
@inject NavigationManager Nav
@inject JournalApp.Services.Implementations.SessionService Session

<div class="lock-page">
    <div class="lock-card">
        <h3 class="lock-title">Journal Lock</h3>

        <div class="lock-body">
            @if (!IsReady)
            {
                <p>Loading...</p>
            }
            else if (!PinIsSet)
            {
                <p class="lock-msg"><b>Set a PIN</b> (4 to 8 digits)</p>

                <input class="ui-input" style="width:100%;" placeholder="Enter new PIN" type="password" @bind="Pin" />
                <input class="ui-input" style="width:100%; margin-top:8px;" placeholder="Confirm PIN" type="password" @bind="ConfirmPin" />

                <div style="margin-top: 16px;">
                    <button class="ui-btn primary" style="width:100%" @onclick="SetPinAsync">Save PIN</button>
                </div>
            }
            else
            {
                <p class="lock-msg"><b>Enter PIN</b></p>

                <input class="ui-input" style="width:100%;" placeholder="PIN" type="password" @bind="Pin" />

                <div style="margin-top: 16px;">
                    <button class="ui-btn primary" style="width:100%" @onclick="UnlockAsync">Unlock</button>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <p class="lock-error">@Message</p>
            }
        </div>
    </div>
</div>

<style>
    .lock-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        width: 100%;
    }

    .lock-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 24px;
        padding: 40px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        text-align: center;
    }

    .lock-title {
        margin: 0 0 24px 0;
        font-weight: 900;
        color: var(--text);
    }

    .lock-msg {
        opacity: 0.8;
        margin-bottom: 16px;
    }

    .lock-error {
        margin-top: 16px;
        color: var(--bad);
        font-weight: bold;
    }
</style>

@code {
    private bool IsReady;
    private bool PinIsSet;

    private string Pin = string.Empty;
    private string ConfirmPin = string.Empty;
    private string Message = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        PinIsSet = await AuthService.IsPinSetAsync();
        IsReady = true;
    }

    private async Task SetPinAsync()
    {
        Message = string.Empty;

        if (Pin != ConfirmPin)
        {
            Message = "PIN does not match.";
            return;
        }

        var ok = await AuthService.SetPinAsync(Pin);
        if (!ok)
        {
            Message = "PIN must be 4 to 8 digits only.";
            return;
        }

        Message = "PIN saved. Please enter it to unlock.";
        Pin = string.Empty;
        ConfirmPin = string.Empty;

        PinIsSet = true;
    }

    private async Task UnlockAsync()
    {
        Message = string.Empty;

        var ok = await AuthService.VerifyPinAsync(Pin);
        if (!ok)
        {
            Message = "Wrong PIN.";
            return;
        }

        Session.IsUnlocked = true;
        Nav.NavigateTo("/today", true);

    }
}
