@namespace JournalApp.Components.Pages.Auth
@page "/lock"
@inject JournalApp.Services.Interfaces.IAuthService AuthService
@inject NavigationManager Nav
@inject JournalApp.Services.Implementations.SessionService Session

<div class="lock-page">
    <div class="lock-card">
        <h3 class="lock-title">Journal Lock</h3>

        <div class="lock-body">
            @if (!IsReady)
            {
                <p>Loading...</p>
            }
            else if (!PinIsSet)
            {
                <p class="lock-msg"><b>Set a PIN</b> (4 to 8 digits)</p>

                <div class="input-with-icon">
                    <input class="ui-input" style="width:100%;" placeholder="Enter new PIN" type="@(ShowPin ? "text" : "password")" @bind="Pin" />
                    <button class="visibility-toggle" @onclick="TogglePinVisibility" type="button">
                        @if (ShowPin)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                <line x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        }
                    </button>
                </div>

                <div class="input-with-icon" style="margin-top:8px;">
                    <input class="ui-input" style="width:100%;" placeholder="Confirm PIN" type="@(ShowConfirmPin ? "text" : "password")" @bind="ConfirmPin" />
                    <button class="visibility-toggle" @onclick="ToggleConfirmPinVisibility" type="button">
                        @if (ShowConfirmPin)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                <line x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        }
                    </button>
                </div>

                <div style="margin-top: 16px;">
                    <button class="ui-btn primary" style="width:100%" @onclick="SetPinAsync">Save PIN</button>
                </div>
            }
            else
            {
                <p class="lock-msg"><b>Enter PIN</b></p>

                <div class="input-with-icon">
                    <input class="ui-input" style="width:100%;" placeholder="PIN" type="@(ShowPin ? "text" : "password")" @bind="Pin" />
                    <button class="visibility-toggle" @onclick="TogglePinVisibility" type="button">
                        @if (ShowPin)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                <line x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        }
                    </button>
                </div>

                <div style="margin-top: 16px;">
                    <button class="ui-btn primary" style="width:100%" @onclick="UnlockAsync">Unlock</button>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <p class="lock-error">@Message</p>
            }
        </div>
    </div>
</div>

<style>
    .lock-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        width: 100%;
    }

    .lock-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 24px;
        padding: 40px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        text-align: center;
    }

    .lock-title {
        margin: 0 0 24px 0;
        font-weight: 900;
        color: var(--text);
    }

    .lock-msg {
        opacity: 0.8;
        margin-bottom: 16px;
    }

    .lock-error {
        margin-top: 16px;
        color: var(--bad);
        font-weight: bold;
    }

    .input-with-icon {
        position: relative;
        width: 100%;
    }

    .visibility-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        transition: color 0.2s ease, transform 0.1s ease;
        border-radius: 6px;
    }

    .visibility-toggle:hover {
        color: var(--accent);
        background: rgba(37, 99, 235, 0.1);
    }

    .visibility-toggle:active {
        transform: translateY(-50%) scale(0.95);
    }

    .visibility-toggle svg {
        display: block;
    }

</style>

@code {
    private bool IsReady;
    private bool PinIsSet;

    private string Pin = string.Empty;
    private string ConfirmPin = string.Empty;
    private string Message = string.Empty;

    private bool ShowPin = false;
    private bool ShowConfirmPin = false;

    protected override async Task OnInitializedAsync()
    {
        PinIsSet = await AuthService.IsPinSetAsync();
        IsReady = true;
    }

    private void TogglePinVisibility()
    {
        ShowPin = !ShowPin;
    }

    private void ToggleConfirmPinVisibility()
    {
        ShowConfirmPin = !ShowConfirmPin;
    }

    private async Task SetPinAsync()
    {
        Message = string.Empty;

        if (Pin != ConfirmPin)
        {
            Message = "PIN does not match.";
            return;
        }

        var ok = await AuthService.SetPinAsync(Pin);
        if (!ok)
        {
            Message = "PIN must be 4 to 8 digits only.";
            return;
        }

        Message = "PIN saved. Please enter it to unlock.";
        Pin = string.Empty;
        ConfirmPin = string.Empty;
        ShowPin = false;
        ShowConfirmPin = false;

        PinIsSet = true;
    }

    private async Task UnlockAsync()
    {
        Message = string.Empty;

        var ok = await AuthService.VerifyPinAsync(Pin);
        if (!ok)
        {
            Message = "Wrong PIN.";
            return;
        }

        Session.IsUnlocked = true;
        Nav.NavigateTo("/", true);

    }
}
